<html>
    <head>
        <title>CS::GO Rcon NodeJS</title>
        <link type="text/css" rel="stylesheet" href="../../css/bootstrap.min.css" />
        <style>
            body {
                padding-top: 5rem;
            }
            .starter-template {
                padding: 3rem 1.5rem;
            }
        </style>
    </head>
    <body>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
            <a class="navbar-brand" href="/">CSGO Rcon NodeJS</a>

            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/match/create">Create match <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container">
            <div class="starter-template">
                <h3>Create new match</h3>

                <div class="table-responsive">
                    <form>
                        <h4>Team 1</h4>
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <td>Name</td>
                                    <td><input type="text" name="team-name-1" id="team-name-1" title="team-name-1" /></td>
                                </tr>
                                <tr>
                                    <td>Country Code</td>
                                    <td><input type="text" name="team-country-1" id="team-country-1" title="team-country-1" /></td>
                                </tr>
                            </tbody>
                        </table>

                        <h4>Team 2</h4>
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <td>Name</td>
                                    <td><input type="text" name="team-name-2" id="team-name-2" title="team-name-2" /></td>
                                </tr>
                                <tr>
                                    <td>Country Code</td>
                                    <td><input type="text" name="team-country-2" id="team-country-2" title="team-country-2" /></td>
                                </tr>
                            </tbody>
                        </table>

                        <h4>General Match Settings</h4>
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <td>Server</td>
                                    <td>
                                        <select title="server" name="server" id="server">
                                            <option selected disabled value="false">Select a server</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Map</td>
                                    <td><input type="text" name="map" title="map" id="map" value="" disabled /></td>
                                </tr>
                                <tr>
                                    <td>Main CSGO Config</td>
                                    <td>
                                        <select title="csgo-config" name="csgo-config" id="csgo-config">
                                            <option selected disabled value="false">Select a config</option>
                                            <option value="esl5v5">esl5v5</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td><button type="button" class="btn btn-lg btn-success" id="submit">Create</button></td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>

        <script src="../../js/socket.io.js"></script>
        <script src="../../js/main.js"></script>
    </body>
</html>
